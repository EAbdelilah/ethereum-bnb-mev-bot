# Chain Selection
# Supported: ethereum, base, polygon, bsc, optimism, arbitrum, etc.
CHAIN=ethereum
CHAIN_ID=1

# Network Configuration
# Format: RPC_URL_{CHAIN_ID}
RPC_URL_1=https://eth-mainnet.g.alchemy.com/v2/your-api-key
WSS_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key

# Your Dedicated MEV Wallet (Never use your primary wallet)
PRIVATE_KEY=your_private_key_without_0x
WALLET_ADDRESS=0xYourWalletAddress

# Bot Configuration
MIN_PROFIT_THRESHOLD=0.01
MAX_GAS_PRICE=100
MAX_TRADE_SIZE=1
CHECK_INTERVAL=1000

# Strategy Toggles
STRATEGY_MIRRORING_RFQ=true
STRATEGY_SPATIAL_ARBITRAGE=true
STRATEGY_LIQUIDATION=true
STRATEGY_COLLATERAL_SWAP=false
STRATEGY_TRIANGULAR_ARB=false
STRATEGY_SELF_LIQUIDATION=false

# Flash Loan Provider
# Options: balancer, sky
DEFAULT_FLASHLOAN_PROVIDER=balancer

# MEV Protection
USE_FLASHBOTS=false
FLASHBOTS_AUTH_KEY=your_flashbots_signing_key

# Contracts
ARBITRAGE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Logging
LOG_LEVEL=info
